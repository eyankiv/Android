<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.eyankiv.hwstarts.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RATE THIS ACTIVITY!"
        android:id="@+id/StarRatingBox"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="1"
            android:id="@+id/star1"
            style="?android:starStyle"
            android:layout_marginTop="14dp" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="2"
            android:id="@+id/star2"
            style="?android:starStyle"
            android:text=""
            android:layout_marginTop="14dp" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="3"
            android:id="@+id/star3"
            style="?android:starStyle"
            android:layout_marginTop="14dp" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="4"
            android:id="@+id/star4"
            style="?android:starStyle"
            android:layout_marginTop="14dp" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="5"
            android:id="@+id/star5"
            style="?android:starStyle"
            android:layout_marginTop="14dp" />


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/StarRatingBox"
        android:layout_alignParentStart="true"
        android:onClick="GoToRating"
        android:text="Go to Rating Screen"/>


</RelativeLayout>
